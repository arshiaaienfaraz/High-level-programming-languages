/*  
1. Define template<typename T> struct S { T val; };.
2. Add a constructor, so that you can initialize with a T.
3. Define variables of types S<int>, S<char>, S<double>, S<string>, and
    S<vector<int>>; initialize them with values of your choice.
4. Read those values and print them.
5. Add a function template get() that returns a reference to val.
6. Put the definition of get() outside the class.
7. Make val private.
8. Do 4 again using get().
9. Add a set() function template so that you can change val.
10. Replace set() with an S<T>::operator=(const T&). Hint: Much simpler than ยง19.2.5.
11. Provide const and non-const versions of get().
12. Define a function template<typename T> read_val(T& v) that reads from cin into v.
13. Use read_val() to read into each of the variables from 3 except the 
    S<vector<int>> variable.
14. Bonus: Define input and output operators (>> and <<) for vector<T>s.
    For both input and output use a { val, val, val } format. 
    That will allow read_val() to also handle the S<vector<int>> variable.
*/

#include "std_lib_facilities.h"

template <typename T>
struct S
{
    private:
    	T val;
    public :
    	S()
    	{
    		val = 0;
    	}
    	S(T val2)
    	{
    		val=val2;
    	}
    	
    	T get();
    	const T get() const;
    	void operator=(const T&);
};

template<typename T>
T S<T>::get()
	{
		return val;
	}

template<typename T>
const T S<T>::get() const
{
	return val;
}

template <typename T>
void S<T>:: operator=(const T& val3)
{
	val = val3;
}
 
template<typename T>
void read_val(T& v)
{
	cin >> v;
}

int main()
{
	S<int> intS(1);
	S<char> charS('A');
	S<double> doubS(1.1);
	S<string> strS("String A");
	S<vector<int>> vecS ({ 1, 2, 3 });
	cout << intS.get()<<endl;
	cout << charS.get() << endl;
	cout << doubS.get() << endl;
	cout << strS.get() << endl;
	for(int i : vecS.get())
	cout << i <<" ";
	cout << endl;
	//part 13
    int i1; read_val(i1); S<int> i1S(i1);

    double d1; read_val(d1); S<double> d1S(d1);

	char c1; read_val(c1); S<char> c1S(c1);
	cout << i1S.get() << endl;
	cout << d1S.get() << endl;
	cout << c1S.get() << endl;
	 
	return 0;
}
